{
  "name": "animaT1RelaxometryEstimation",
  "tool-version": "1.1",
  "description": "relaxometry for T1 sequences",
  "command-line": "animaT1RelaxometryEstimation [THREAD_NUMBER] [BACKGROUND] [UPPER_BOUND_M0] [UPPER_BOUND_T1] [FLIP] [REPETITION] [B1_INHOMOGENITY] [MASK] [IMAGES] [M0_IMAGE] [T1_IMAGE]",
  "docker-image": "fcervenansky/relaxometry:latest",
  "docker-index": "http://index.docker.io",
  "schema-version": "0.3",
  "inputs": [
    {
      "id": "thread_number",
      "name": "Number of Thread",
      "type": "String",
      "description": "number of threads to run on",
      "command-line-key": "[THREAD_NUMBER]",
      "list": false,
      "optional": true,
      "command-line-flag": "-T",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "background_signal",
      "name": "background signal threshold",
      "type": "String",
      "description": "background signal threshold",
      "command-line-key": "[BACKGROUND]",
      "list": false,
      "optional": false,
      "command-line-flag": "-t",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 10
    },
    {
      "id": "upper_bond",
      "name": "M0 value upper bound",
      "type": "Number",
      "description": "M0 value upper bound",
      "command-line-key": "[UPPER_BOUND_M0]",
      "list": false,
      "optional": false,
      "command-line-flag": "--upper-bound-m0",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 5000
    },
    {
      "id": "T1_upper_bound",
      "name": "T1 upper bound",
      "type": "Number",
      "description": "T1 value upper bound",
      "command-line-key": "[UPPER_BOUND_T1]",
      "list": false,
      "optional": false,
      "command-line-flag": "-u",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 5000
    },
    {
      "id": "flip",
      "name": "flip",
      "type": "File",
      "description": "text file listing flip angles (in degrees)",
      "command-line-key": "[FLIP]",
      "list": false,
      "optional": false,
      "command-line-flag": "-f",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "repetion_time",
      "name": "repetion time",
      "type": "Number",
      "description": "repetition time for T1 relaxometry",
      "command-line-key": "[REPETITION]",
      "list": false,
      "optional": false,
      "command-line-flag": "--tr",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 15
    },
    {
      "id": "b1",
      "name": "B1 map",
      "type": "String",
      "description": "B1 inhomogenity map",
      "command-line-key": "[B1_INHOMOGENITY]",
      "list": false,
      "optional": true,
      "command-line-flag": "-b",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "mask",
      "name": "mask",
      "type": "File",
      "description": "computation mask",
      "command-line-key": "[MASK]",
      "list": false,
      "optional": true,
      "command-line-flag": "-m",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "relaxometry_images",
      "name": "images",
      "type": "File",
      "description": "List of T1 relaxometry images",
      "command-line-key": "[IMAGES]",
      "list": true,
      "optional": false,
      "command-line-flag": "-l",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    }
  ],
  "output-files": [
    {
      "id": "m0_result",
      "name": "M0 image",
      "description": "Result M0 image",
      "command-line-key": "[M0_IMAGE]",
      "path-template": "results/[BACKGROUND]/[UPPER_BOUND_T1]_m0_result.nii.gz",
      "path-template-stripped-extensions": [],
      "list": false,
      "optional": false,
      "command-line-flag": "-O"
    },
    {
      "id": "T1_result",
      "name": "Result T1 image",
      "description": "Result T1 image",
      "command-line-key": "[T1_IMAGE]",
      "path-template": "results/[BACKGROUND]/[UPPER_BOUND_T1]_T1_result.nii.gz",
      "path-template-stripped-extensions": [],
      "list": false,
      "optional": false,
      "command-line-flag": "-o"
    }
  ]
}