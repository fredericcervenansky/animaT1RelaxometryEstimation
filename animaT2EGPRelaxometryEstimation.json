{
  "name": "animaT2EPGRelaxometryEstimation",
  "tool-version": "1.1",
  "description": "relaxometry for T2 EGP sequences",
  "command-line": "animaT2EPGRelaxometryEstimation [OPT_INITIAL_STEP] [OPT_STOP_THRESH] [OPT_MAX_ITER] [THREAD_NUMBER] [B1] [BACKGROUND] [FLIP] [T2_EX_FLIP] [UPPER_BOUND_M0] [UPPER_BOUND_T2] [SPACING] [M0_INIT_MAP] [T2_INIT_MAP] [B1_INHOMOGENITY] [T1_MAP] [MASK] [T2_IMAGES] [M0_IMAGE] [T2_IMAGE]",
  "docker-image": "fcervenansky/fullrelaxometry:1.1",
  "docker-index": "http://index.docker.io",
  "schema-version": "0.3",
  "inputs": [
    {
      "id": "initial_step",
      "name": "optimizer initial step",
      "type": "String",
      "description": "Optimizer initial step",
      "command-line-key": "[OPT_INITIAL_STEP]",
      "list": false,
      "optional": false,
      "command-line-flag": "-i",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 10
    },
	{
      "id": "stopping_threshold",
      "name": "optimizer stopping threshold",
      "type": "String",
      "description": "Optimizer stopping threshold",
      "command-line-key": "[OPT_STOP_THRESH]",
      "list": false,
      "optional": false,
      "command-line-flag": "--opt-stop",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 0.0001
    },
	{
      "id": "opt_max_iter",
      "name": "maximal number of optimizer iterations",
      "type": "String",
      "description": "Optimizer stopping threshold",
      "command-line-key": "[OPT_MAX_ITER]",
      "list": false,
      "optional": false,
      "command-line-flag": "--opt-iter",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 200
    },
	{
      "id": "thread_number",
      "name": "Number of Thread",
      "type": "String",
      "description": "number of threads to run on",
      "command-line-key": "[THREAD_NUMBER]",
      "list": false,
      "optional": true,
      "command-line-flag": "-T",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
	{
      "id": "b1",
      "name": "B1",
      "type": "String",
      "description": "B1 also applied to excitation angle",
      "command-line-key": "[B1]",
      "list": false,
      "optional": false,
      "command-line-flag": "--b1-exc",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "background_signal",
      "name": "background signal threshold",
      "type": "String",
      "description": "background signal threshold",
      "command-line-key": "[BACKGROUND]",
      "list": false,
      "optional": false,
      "command-line-flag": "-t",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 10
    },
	{
      "id": "t2_flip",
      "name": "T2 flip",
      "type": "File",
      "description": "text file listing flip angles (in degrees)",
      "command-line-key": "[FLIP]",
      "list": false,
      "optional": false,
      "command-line-flag": "--t2-flip",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
	{
      "id": "t2_ex_flip",
      "name": "T2 excitation flip angle",
      "type": "File",
      "description": "text file listing T2 excitation flip angles (in degrees)",
      "command-line-key": "[T2_EX_FLIP]",
      "list": false,
      "optional": false,
      "command-line-flag": "--t2-ex-flip",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "spacing_between_echoes",
      "name": "spacing between echoes",
      "type": "String",
      "description": "spacing between echoes",
      "command-line-key": "[SPACING]",
      "list": false,
      "optional": false,
      "command-line-flag": "-e",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 10
    },
    {
      "id": "upper_bond",
      "name": "M0 value upper bound",
      "type": "Number",
      "description": "M0 value upper bound",
      "command-line-key": "[UPPER_BOUND_M0]",
      "list": false,
      "optional": false,
      "command-line-flag": "--upper-bound-m0",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 5000
    },
    {
      "id": "T2_upper_bound",
      "name": "T2 upper bound",
      "type": "Number",
      "description": "T2 value upper bound",
      "command-line-key": "[UPPER_BOUND_T2]",
      "list": false,
      "optional": false,
      "command-line-flag": "-u",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": 1000
    },
    {
      "id": "m0_init_map",
      "name": "M0 initial map",
      "type": "File",
      "description": "M0 initial map",
      "command-line-key": "[M0_INIT_MAP]",
      "list": false,
      "optional": false,
      "command-line-flag": "--init-m0",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "t2_init_map",
      "name": "T2 initial map",
      "type": "File",
      "description": "T2 initial map",
      "command-line-key": "[T2_INIT_MAP]",
      "list": false,
      "optional": false,
      "command-line-flag": "--init-t2",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "b1_map",
      "name": "B1 map",
      "type": "File",
      "description": "B1 inhomogenity map",
      "command-line-key": "[B1_INHOMOGENITY]",
      "list": false,
      "optional": true,
      "command-line-flag": "--b1",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "T1_map",
      "name": "images",
      "type": "File",
      "description": "List of T1 map",
      "command-line-key": "[T1_MAP]",
      "list": true,
      "optional": false,
      "command-line-flag": "--t1",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "mask",
      "name": "mask",
      "type": "File",
      "description": "computation mask",
      "command-line-key": "[MASK]",
      "list": false,
      "optional": true,
      "command-line-flag": "-m",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    },
    {
      "id": "relaxometry_images",
      "name": "images",
      "type": "File",
      "description": "List of T2 relaxometry images",
      "command-line-key": "[T2_IMAGES]",
      "list": true,
      "optional": false,
      "command-line-flag": "-l",
      "required-inputs": [],
      "disabled-by-inputs": [],
      "default-value": null
    }
  ],
  "output-files": [
    {
      "id": "m0_result",
      "name": "M0 image",
      "description": "Result M0 image",
      "command-line-key": "[M0_IMAGE]",
      "path-template": "results/[BACKGROUND]/[UPPER_BOUND_T2]_m0_result.nii.gz",
      "path-template-stripped-extensions": [],
      "list": false,
      "optional": false,
      "command-line-flag": "-O"
    },
    {
      "id": "T2_result",
      "name": "Result T2 images",
      "description": "Result of T2 relaxometry images",
      "command-line-key": "[T2_IMAGE]",
      "path-template": "results/[BACKGROUND]/[UPPER_BOUND_T2]_T2_result.nii.gz",
      "path-template-stripped-extensions": [],
      "list": false,
      "optional": false,
      "command-line-flag": "-o"
    }
  ]
}